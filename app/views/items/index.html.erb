<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>UID</th>
      <th>User ID</th>
      <th>Title</th>
      <th>Type</th>
      <th>Data</th>
      <th>Shared</th>
      <th>Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.uid %></td>
        <td><%= item.user_id %></td>
        <td><%= item.title %></td>
        <td><%= item.track ? "track" : "pattern" %></td>
        <td><%= item.data %></td>
        <td><%= item.shared %></td>
        <td><%= item.likes %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

